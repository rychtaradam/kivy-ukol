<Calc>:
    id: kalkulacka
    display: entry
    rows: 6
    padding: 10
    spacing: 10



    BoxLayout:
        TextInput:
            id: entry
            font_size: 32
            multiline: False

    BoxLayout:
        spacing: 10
        Button:
            text: "7"
            on_press: entry.text += self.text
            font_size: 32
        Button:
            text: "8"
            on_press: entry.text += self.text
            font_size: 32
        Button:
            text: "9"
            on_press: entry.text += self.text
            font_size: 32
        Button:
            text: "+"
            on_press: entry.text += self.text
            font_size: 32

    BoxLayout:
        spacing: 10
        Button:
            text: "4"
            on_press: entry.text += self.text
            font_size: 32
        Button:
            text: "5"
            on_press: entry.text += self.text
            font_size: 32
        Button:
            text: "6"
            on_press: entry.text += self.text
            font_size: 32
        Button:
            text: "-"
            on_press: entry.text += self.text
            font_size: 32

    BoxLayout:
        spacing: 10
        Button:
            text: "1"
            on_press: entry.text += self.text
            font_size: 32
        Button:
            text: "2"
            on_press: entry.text += self.text
            font_size: 32
        Button:
            text: "3"
            on_press: entry.text += self.text
            font_size: 32
        Button:
            text: "*"
            on_press: entry.text += self.text
            font_size: 32

    BoxLayout:
        spacing: 10
        Button:
            text: "AC"
            on_press: entry.text = ""
            font_size: 32
        Button:
            text: "0"
            on_press: entry.text += self.text
            font_size: 32
        Button:
            text: "="
            on_press: kalkulacka.vypocitej(entry.text)
            font_size: 32
        Button:
            text: "/"
            on_press: entry.text += self.text
            font_size: 32